{
  "name": "micro-frontend-demo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepack": "yarn build",
    "prepare": "yarn build",
    "pub": "yarn workspace single-spa-mf run pub",
    "build": "yarn workspace single-spa-mf run build",
    "prettier": "prettier --write \"packages/**/*.{js,tsx,ts,jsx}\"",
    "reinstall": "rm -rf node_modules yarn.lock && ayarn",
    "start:app": "yarn workspace main start",
    "start:app2": "yarn workspace app2 start",
    "start:app1": "yarn workspace app1 start",
    "start": "concurrently 'yarn:start:*'"
  },
  "devDependencies": {
    "@babel/core": "7.x",
    "@tsconfig/recommended": "^1.0.1",
    "concurrently": "6.x",
    "prettier": "2.x",
    "semver": "7.x",
    "typescript": "4.x"
  },
  "packageManager": "yarn@3.1.1"
}
