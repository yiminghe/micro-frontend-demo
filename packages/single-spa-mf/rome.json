{
  "formatter": {
    "enabled": false
  },
  "files": {
    "ignore": ["src/tsdoc-metadata.json"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "suspicious": {
        "noExplicitAny": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      },
      "a11y": {
        "useKeyWithClickEvents": "off",
        "useValidAnchor": "off"
      }
    }
  }
}
